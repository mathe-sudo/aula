<script>
function checkAnswers() {
    const words = ['relación', 'comunicación', 'bienestar', 'calma', 'olisquear', 'echarse', 'inmovilizarse', 'autocontrol'];
    const foundWords = words.map(word => `<li>${word}</li>`).join('');
    document.getElementById('resultado').innerHTML = `<h4>Palabras encontradas:</h4><ul>${foundWords}</ul>`;
}
</script>

