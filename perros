        <div class="concept" draggable="true" ondragstart="drag(event)">Salud</div>
    </div>
    <div id="dropArea" ondrop="drop(event)" ondragover="allowDrop(event)" style="border: 2px dashed #ccc; padding: 10px; margin-top: 10px;">
        <h5>Arrastra los conceptos aquí:</h5>
    </div>
</div>

<script>
function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.innerHTML);
}

function drop(ev) {
    ev.preventDefault();
    var data = ev.dataTransfer.getData("text");
    ev.target.innerHTML += "<div>" + data + "</div>"; // Muestra el concepto en el área de caída
}
</script>

